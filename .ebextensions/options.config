packages:
  yum:
    certbot: []
    mod_ssl: []

files:
  /etc/cron.d/certbot_renew:
    content: "@weekly root certbot renew\n"
    group: root
    mode: "000644"
    owner: root

commands:
  01_getcert:
    command: "sudo certbot certonly --non-interactive --email admin@fleetmap.io --agree-tos --standalone --domains traccar.fleetmap.pt --force-renewal"
  02_link:
    command: "ln -sf /etc/letsencrypt/live/traccar.fleetmap.pt /etc/letsencrypt/live/ebcert"
