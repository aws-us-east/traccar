packages:
  yum:
    certbot: []
    mod_ssl: []

files:
  /etc/cron.d/certbot_renew:
    content: "@weekly root certbot renew\n"
    group: root
    mode: "000644"
    owner: root

commands:
  01_getcert:
    command: "sudo certbot certonly --debug --non-interactive --email admin@fleetmap.io --agree-tos --standalone --domains traccar.fleetmap.pt --keep-until-expiring --pre-hook \"sudo service nginx stop\" --post-hook \"sudo service nginx start\""
  02_link:
    command: "ln -sf /etc/letsencrypt/live/traccar.fleetmap.pt /etc/letsencrypt/live/ebcert"
